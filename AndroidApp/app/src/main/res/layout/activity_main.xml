<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.stephenmylabathula.iot.pic_pager.MainActivity">

    <TextView android:text="Pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDeviceName"
        android:layout_below="@+id/textview"
        android:paddingTop="50px"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn On"
        android:id="@+id/buttonOn"
        android:layout_below="@+id/txtDeviceName"
        android:clickable="true"
        android:onClick="on" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pair"
        android:onClick="pair"
        android:id="@+id/buttonPair"
        android:layout_below="@+id/txtDeviceName"
        android:layout_alignParentRight="true"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="turn off"
        android:onClick="off"
        android:id="@+id/buttonOff"
        android:layout_below="@+id/txtDeviceName"
        android:layout_centerHorizontal="true"
         />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPayload"
        android:layout_below="@+id/buttonOn"
        android:paddingTop="100px"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:onClick="send"
        android:id="@+id/buttonSend"
        android:layout_below="@+id/txtPayload"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>
